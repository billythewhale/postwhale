{
  "name": "postwhale-workspace",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "cd electron && npm start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o postwhale .",
    "build:electron": "cd electron && npm run package",
    "build": "npm run build:backend && npm run build:frontend && npm run build:electron",
    "start": "cd electron && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
